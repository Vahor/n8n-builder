{
	"name": "@vahor/n8n-kit-workspace",
	"version": "0.0.0",
	"workspaces": {
		"packages": [
			"packages/*",
			"examples/*"
		],
		"catalog": {
			"tsdown": "^0.14.1",
			"typescript": "^5.9.2",
			"arktype": "^2.1.20"
		}
	},
	"description": "Build n8n workflows using code",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Vahor/n8n-kit.git"
	},
	"private": true,
	"author": {
		"email": "me@vahor.fr"
	},
	"keywords": [
		"n8n",
		"builder",
		"workflow",
		"automation"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.6",
		"@types/bun": "^1.2.20",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"pkg-pr-new": "^0.0.55",
		"tsdown": "catalog:",
		"typescript": "catalog:"
	},
	"scripts": {
		"prepare": "husky",
		"build": "bun run build.ts",
		"format": "bunx @biomejs/biome check ./ --write",
		"typecheck": "tsc --noEmit --declaration",
		"ci:version": "changeset version && bun update",
		"ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag"
	},
	"engines": {
		"bun": ">=1.2.20"
	},
	"lint-staged": {
		"!(**/generated/**)": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
}
